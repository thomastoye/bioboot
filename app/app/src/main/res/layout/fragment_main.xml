<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivityFragment">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:id="@+id/status_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/backbone_url"
            android:text="http://192.168.1.31:3000"
            app:layout_constraintTop_toBottomOf="@+id/status_text"
    />

    <TextView
            android:id="@+id/status_motor_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/backbone_url"/>
    <TextView
            android:id="@+id/status_motor_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/status_motor_left"/>

    <ProgressBar
            android:id="@+id/bar_motor_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:min="0"
            android:max="255"
            android:indeterminate="false"
            app:layout_constraintTop_toBottomOf="@+id/status_motor_right"/>

    <ProgressBar
            android:id="@+id/bar_motor_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:min="0"
            android:max="255"
            android:indeterminate="false"
            app:layout_constraintTop_toBottomOf="@+id/bar_motor_left"/>

</android.support.constraint.ConstraintLayout>